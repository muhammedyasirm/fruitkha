<script>
    function removeFromWishlist(wishlistId,productId){
        $.ajax({
            url:"/removeFromWishlist",
            method:"post",
            data:{
                wishlistId,
                productId
            },
            success:(response)=>{
                if(response.status){
                    Swal.fire({
                    title:"Product removed from Wishlist",
                    icon:"success",
                    confirmButtonText:"OK"
                }).then(()=>{
                    location.reload();
                })
                }
               
            }
        })
    }
</script>

