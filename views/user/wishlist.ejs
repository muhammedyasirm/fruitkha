<!-- cart -->
<div class="cart-wrap">
    <div class="container">
        <% if(countInWishlist!==0){ %> 
        <div class="row">
            <div class="col-md-12">
                <div class="main-heading mb-10">My wishlist</div>
                <div class="table-wishlist">
                    <table cellpadding="0" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th width="45%">Product Name</th>
                                <th width="15%">Unit Price</th>
                                <th width="15%">Stock Status</th>
                                <th width="15%"></th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% wishlistData.forEach((product)=>{ %> 
                            <tr>
                                <td width="45%">
                                    <div class="display-flex align-center">
                                        <div class="img-product">
                                            <img src="<%=product.productDetail.image[0].url%>" alt="" class="mCS_img_loaded">
                                        </div>
                                        <div class="name-product">
                                            <%=product.productDetail.product_name%> 
                                        </div>
                                    </div>
                                </td>
                                <td width="15%" class="price"><%=product.productDetail.price%></td>
                                <td width="15%"><span class="in-stock-box">In Stock</span></td>
                                <td width="15%"><a href="/addToCart/<%=product.productDetail._id%>" class="boxed-btn">Add To Cart</a></td>
                                <td width="10%" class="text-center"><a onclick="removeFromWishlist('<%=product._id%>','<%=product.productDetail._id%>')" class="trash-icon"><i class="far fa-trash-alt"></i></a></td>
                            </tr>
                            <%})%> 
                        </tbody>
                    </table>
                </div>
            </div>
            <% }else{ %> 
                <div class="d-flex align-items-center justify-content-center">
                    <h2 class="" style="color: #fd7e14;">Oops..! Your Wishlist is empty</h2>
                </div>
                <div class="cart-buttons text-center">
                    <a href="/shop" class="boxed-btn">Go Add Items</a>
                </div>
                <% } %> 
        </div>
    </div>
</div>
<!-- end cart -->

