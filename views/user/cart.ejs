	<!-- cart -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Product Image</th>
									<th class="product-name">Name</th>
									<th class="product-price">Price</th>
									<th class="product-quantity">Quantity in Kg</th>
									<th class="product-total">Total Price</th>
								</tr>
							</thead>
							<tbody>
								<%productData.forEach((product)=>{%>
								<tr class="table-body-row">
									<td class="product-remove"><button onclick="removeProduct('<%=product._id%>','<%=product.productDetail._id%>')"><i class="far fa-window-close" style="border: none;"></i></a></td>
									<td class="product-image"><img src="/images/<%=product.productDetail._id%>.jpg" alt=""></td>

									<td class="product-name"><%=product.productDetail.product_name%></td>

									<td class="product-price"><p id="price"><%=product.productDetail.price%></p></td>

									<div class="product_count">
									<td>
										<div class="container d-flex">
											<button
												class="cart-item-count  mr-3" 
												onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',-1)">-</button>
											<p id="<%= product.productDetail._id %>" min="0" name="quantity"><%= product.productQuantity%></p>
											
											<button class="cart-item-count ml-3 mr-3"
												onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',1)">+</button>
										</div>
										
										<!-- <button onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>','1')"class="increase items-count"type="button">
										<i class="lnr lnr-chevron-up"></i></button>
										<p id="<%= product.productDetail._id %>" min="0" name="quantity"><%= product.productQuantity%></p>
									    <button onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>','-1')"class="reduced items-count"type="button">
									 	<i class="lnr lnr-chevron-down"></i></button> -->
									</td>
										</div>
										<td class="product-total" id="total<%=product._id%>">₹<%=product.productQuantity * product.productDetail.price%></td>
									<!-- <td class="product-total">1</td> -->
								</tr>
								<%})%>
							</tbody>
						</table>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Total</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Subtotal: </strong></td>
									<td><%=sum%></td>
								</tr>
								<tr class="total-data">
									<td><strong>Shipping: </strong></td>
									<td>₹<%=shipping%></td>
									
								</tr>
								<tr class="total-data">
									<td><strong>Coupon Applied:</strong></td>
									<td>₹0</td>
								</tr>
								<tr class="total-data">
									<td><strong>Total: </strong></td>
									<td>₹<%=sum + shipping%></td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a href="/shop" class="boxed-btn">Continue Shopping</a>
							<a href="checkout.html" class="boxed-btn black">Check Out</a>
						</div>
					</div>

					<div class="coupon-section">
						<h3>Apply Coupon</h3>
						<div class="coupon-form-wrap">
							<form action="index.html">
								<p><input type="text" placeholder="Coupon"></p>
								<p><input type="submit" value="Apply"></p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
