	<script>
		function addToWishlist(proId){
			$.ajax({
				url:"/addToWishlist/"+proId,
				method:"get",
				success:(response)=>{
					if(response.status){
						Swal.fire({
							title:"Added to Wishlist",
							icon:"success",
							confirmButtonText:"Continue"
						});
					}
					if(response.productExist){
						console.log("Swal not working");
						Swal.fire({
							title:"Already Exist in Wishlist",
							icon:"error",
							confirmButtonText:"Continue"
						})
					}
				}
			})
		}
	</script>

