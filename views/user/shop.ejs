						<div class="product-image">
							<a href="/productView/<%=product._id%>"><img style="width: 300px;height: 225px;" src="<%=product.image[0].url%>" alt=""></a>
						</div>
						<h3><%=product.product_name%></h3>
						<p class="product-price"><span>Per Kg</span>â‚¹ <%=product.price%> </p>
						<% if (customer) { %>
							<a href="/addToCart/<%=product._id%>" class="cart-btn"><i class="fas fa-shopping-cart"></i>Add to Cart</a>
							<a onclick="addToWishlist('<%=product._id%>')" class="cart-btn"><i class="fas fa-solid fa-heart"></i>Add to Wishlist</a>
							<% } else {%>
								<a href="/userLogin" class="cart-btn"><i class="fas fa-shopping-cart"></i> Buy Now</a>
							<% } %>
					</div>
				</div>
				<%})%>

			
